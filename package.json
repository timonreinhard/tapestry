{
  "name": "tapestry",
  "version": "0.1.0",
  "description": "A minimal dashboard for openHAB",
  "author": "Timon Reinhard",
  "license": "MPL-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/timonreinhard/tapestry.git"
  },
  "bugs": {
    "url": "https://github.com/timonreinhard/tapestry/issues"
  },
  "homepage": "https://github.com/timonreinhard/tapestry",
  "scripts": {
    "start": "node build/dev-server.js",
    "build": "node build/build.js",
    "test:watch": "cross-env NODE_ENV=test mocha --watch",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "lint": "eslint --ext .js,.vue src test/unit/specs"
  },
  "config": {
    "target": "http://localhost:8080"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "clone": "^2.0.0",
    "lodash": "^4.17.4",
    "pepjs": "^0.4.2",
    "sprintf-js": "^1.0.3",
    "tween.js": "^16.6.0",
    "vue": "^2.2.6",
    "vue-i18n": "^5.0.3",
    "vuedraggable": "^2.9.0",
    "vuex": "^2.2.1",
    "vuex-persistedstate": "^1.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.22.0",
    "browser-env": "^2.0.29",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "connect-history-api-fallback": "^1.3.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "eslint": "^3.14.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-friendly-formatter": "^2.0.7",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-html": "^2.0.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.2.0",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "^0.11.1",
    "friendly-errors-webpack-plugin": "^1.1.3",
    "function-bind": "^1.1.0",
    "html-webpack-plugin": "^2.28.0",
    "http-proxy-middleware": "^0.17.3",
    "inject-loader": "^3.0.0",
    "lolex": "^1.5.2",
    "mocha": "^3.2.0",
    "module-alias": "^2.0.0",
    "node-sass": "^4.5.2",
    "nyc": "^10.2.0",
    "optimize-css-assets-webpack-plugin": "^1.3.0",
    "ora": "^1.1.0",
    "require-extension-hooks": "^0.2.0",
    "require-extension-hooks-vue": "^0.2.0",
    "rimraf": "^2.6.0",
    "sass-loader": "^6.0.3",
    "semver": "^5.3.0",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "url-loader": "^0.5.7",
    "vue-loader": "^11.3.4",
    "vue-node": "^1.1.0",
    "vue-style-loader": "^2.0.0",
    "vue-template-compiler": "^2.2.6",
    "webpack": "^2.2.1",
    "webpack-bundle-analyzer": "^2.2.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-merge": "^4.1.0"
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "not ie <= 10"
            ],
            "node": true
          }
        }
      ]
    ],
    "plugins": [
      "transform-runtime",
      "transform-object-rest-spread"
    ],
    "comments": false,
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "browserslist": [
    "last 2 versions",
    "not ie <= 10"
  ],
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "require": [
      "./test/setup.js",
      "babel-core/register"
    ],
    "extension": [
      ".vue"
    ],
    "include": [
      "src/**/*.js",
      "src/**/*.vue"
    ],
    "all": false,
    "cache": true,
    "sourceMap": false,
    "instrument": false
  }
}
